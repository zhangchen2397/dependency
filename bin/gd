#!/usr/bin/env node

'use strict';

var gd = require( '../src/gd.js' );

var version = require( '../package.json' ).version;

var args = process.argv.slice( 2 );

var config = {
    basePath: args[ 0 ] || './',
    buildConfPath: args[ 1 ] || './build.conf',
    mtConfigPath: args[ 2 ] || './index.jsp',
};

if ( /-v|-version/.test( args[ 0 ] ) ) {
    process.stdout.write( version + '\n' );
    process.exit();
}

new gd( config );

